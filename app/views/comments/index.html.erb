<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Body</th>
      <th>Blog</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <!-- <td><%= comment.blog %></td>
        <td><%= comment.user %></td> -->

        <td><%= link_to 'Edit', edit_blog_comment_path(@blog,comment) %></td>
        <td><%= link_to 'Destroy', blog_comment_path(@blog,comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Comment', new_blog_comment_path %>
