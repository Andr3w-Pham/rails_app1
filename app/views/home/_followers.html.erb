<div class="followers">
  <h3>Suggestions:</h3>

  <table class="table">

    <% current_user.followees.each do |followee|  %>
      <% followee.email %>
    <% end %>

    <tbody>
      <% @users.each do |user| %>
          <% if user.email != current_user.email%>
            <tr>
              <td><%= user.email %></td>
              <td><%= link_to 'Follow', followings_path(:follower_id => user), method: :post %></td>
            </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>

  <table class="table">

    <% if current_user.followings %>
      <h4 class="shade-grey">Following:</h4>
      <ul>
        <% current_user.followings.each do |following|  %>
        <li><%= following.followee.profile.name %>
        <%= link_to 'unfollow', following, method: :delete %></li>
        <% end %>
      </ul>

      <br><br><br>
      <h4 class="shade-grey">Followers:</h4>
      <ul>
        <% current_user.followers.each do |follower|  %>
        <li><%=follower.profile.name %></li>
        <% end %>
      </ul>
    <% end %>
</div>
