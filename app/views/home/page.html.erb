<div class="posts-home">
  <% @blogs.each do |blog| %>
    <div id="<%= blog.id%>">
      <!-- after hitting a like return to this point -->
      <div class="card">
        <div class="profile-post">
          <%= image_tag(blog.profile.picture_url, class: "profile-post-pic") %>
          <div class="profile-post-content">
            <%= blog.profile.name %>
            <br>
            <%= blog.profile.location %>
          </div>
        </div>
        <div class="card-body">
          <%= image_tag(blog.attachments.first.image_url, class:"post-pic") %>
          <h6 class="card-title">
            <% if current_user %>
              <%= link_to like_blog_path(blog), method: :put ,remote: true do %>
                <%= current_user.voted_as_when_voted_for(blog) == true ? "unlike" : "like" %>
              <% end %>
            <% else %>
              <i class="fas fa-heart"></i>
            <% end %>
            <br>
            <%= blog.votes_for.size %> likes
          </h6>
          <p class="card-text">
            <%= blog.status %>
            <br>
            <p>
              <%= link_to 'Add Comment',new_blog_comment_path(blog) %>
              <br>
              <%= link_to 'Delete Comment',blog_comments_path(blog), method: :destroy %>
            </p>
            <br>
            <% blog.comments.each do |comment| %>
            <p>
            <strong><%= comment.user.profile.name %>:</strong>
            <br>
             <%= comment.body %>
            </p>
           <% end %>
            <span class="date"><%= blog.created_at.strftime("%d %h")%></span>
          </p>
        </div>
      </div>
    </div>

  <% end %>
</div>
<h3>Suggestions:</h3>

<table class="table">
  <!-- <thead>
    <tr>
      <th>profile name</th>
      <th>follow link</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
    <% @users.each do |user| %>
      <% if user.email != current_user.email %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to 'follow', followings_path(:following_id => user), method: :post%></td>
          <td><%= link_to 'Unfollow', followings_path(:following_id => user), method: :destroy%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

