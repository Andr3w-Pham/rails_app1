<p id="notice"><%= notice %></p>

<p>
  <strong>Status:</strong>
  <%= @post.status %>
</p>

<p>
  <strong>Profile:</strong>
  <%= @post.profile.name %>
</p>

<p>
  <strong>
    <%= image_tag(@post.picture_url, width:"50%", height:"100%") %>
  </strong>
</p>


<h1>Add Picture</h1>
<%= render 'attachments/pic' %>

<% @post.attachments.each do |attachment| %>
  <%= image_tag(attachment.image_url, width: "30%", height: "30%") %>
<% end %>
