<div class="card" style="width: 40rem;">

  <div class="card-body">
    <p>
      <strong>
        <%= image_tag(@post.picture_url, width:"50%", height:"100%") %>
      </strong>
      <% @post.attachments.each do |attachment| %>
        <%= image_tag(attachment.image_url, width: "30%", height: "30%") %>
      <% end %>
    </p>
    <h5 class="card-title">
      <p>
        <strong>Profile:</strong>
        <%= @post.profile.name %>
      </p>
    </h5>
    <p class="card-text">
      <strong>Status:</strong>
      <%= @post.status %>
    </p>
    <%= @post.score %>
    <%= link_to "", like_post_path(@post), method: :put, class:"far fa-heart"%>
    <%= link_to "", dislike_post_path(@post), method: :put, class:"far fa-thumbs-down" %>
    <%= link_to "", posts_path, class:"fas fa-arrow-circle-left"%>
  </div>
</div>
