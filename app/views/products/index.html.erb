<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
       <div class="card">
           <%= image_tag(product.picture_url, class: "product-pic") %>
           <span class="follow-profile-name"><%=product.name %></span>
           <%= link_to 'Buy',buyer_sellers_path(:product_id => product.id), method: :post, class: "btn btn-primary" %>
       </div>
    </div>
    <% end %>
  <br><br>
</div>
<br><br>
<table class="table">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.seller.user.profile.name %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %>0</td>
        <td><%= product.qty %></td>
        <td><%= product.description %></td>
        <!-- <td><%= product.seller %></td> -->
        <td><%= link_to 'Show', product, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', product, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

