<%= simple_form_for(@post, as: :attachment, url:post_attachments_path(@post), method: :post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <!-- <%= f.input :image,as: :file %> -->
    <%= @post.score %>
    <%= link_to "upvote", like_post_path(@post), method: :put %>
    <%= link_to "downvote", dislike_post_path(@post), method: :put %>
    <%= f.input :image,as: :file, multiple: true  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
