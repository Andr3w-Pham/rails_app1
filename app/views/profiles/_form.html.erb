
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs,form-group">
    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :location %>
    <%= f.input :dob, order: [:day, :month, :year], start_year:Date.today.year - 12 , end_year:Date.today.year - 90 , label: "Date of birth" %>
    <%= f.input :picture, as: :file %>
    <%= f.input :picture_cache , as: :hidden %>
    <!-- <%= f.association :user %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
